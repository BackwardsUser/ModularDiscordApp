{
  "name": "modular-bot",
  "version": "1.0.0",
  "description": "A Modular Bot",
  "main": "src/index.js",
  "scripts": {
    "dev": "electron .",
    "package": "electron-packager . ModularBot --platform win32 --arch x64 --out dist/ --icon src/assets/icons/icon.ico --executable-name modular-bot",
    "setup": "electron-installer-windows --src dist/ModularBot-win32-x64/ --dest dist/installers/ --icon src/assets/icons/icon.ico"
  },
  "author": "Backwards",
  "license": "MIT",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "discord.js": "^13.6.0",
    "electron-package": "^0.1.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^17.0.0",
    "electron-packager": "^15.4.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/icons/icon.ico",
        "name": "Modular Bot"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "icon": "src/assets/icons/icon.ico",
            "name": "test"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
